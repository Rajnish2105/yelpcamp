<% layout('layouts/boilerplate') %>
    <div class="container mt-5">
        <div class="row">
            <h1 class="text-center">Create a New Campground</h1>
            <div class="col-md-6 offset-md-3">
                <form method="post" action="/campgrounds" novalidate class="validated-form"
                    enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" type="text" name="campground[title]" id="title" required>
                        <div class="valid-feedback">looks fine!</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="location">Location</label>
                        <input class="form-control" type="text" name="campground[location]" id="location" required>
                        <div class="valid-feedback">looks fine!</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="price">Campground Price</label>
                        <div class="input-group">
                            <span class="input-group-text" id="price-label">$</span>
                            <input name="campground[price]" type="text" class="form-control" id="price"
                                placeholder="0.00" aria-label="price" aria-describedby="price-label" required>
                            <div class="valid-feedback">looks fine!</div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-control" type="text" name="campground[description]" id="description"
                            required></textarea>
                        <div class="valid-feedback">looks fine!</div>
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Images</label>
                        <input class="form-control" type="file" id="image" name="image" multiple>
                        <div class="message"></div>
                    </div>

                    <div class="mb-3">
                        <button class="btn btn-success">Add Campground</button>
                    </div>
                </form>
                <a href="/campgrounds" class="btn btn-info back">Back to All Campgrounds</a>
            </div>
        </div>
    </div>

    <script>
        const imgUploadLimit = document.querySelector('#image');
        imgUploadLimit.addEventListener('change', () => {
            const maxFiles = 5;
            const msg = document.querySelector('.message');
            msg.style.color = 'red';
            if (imgUploadLimit.files.length > maxFiles) {
                msg.textContent = `You can only upload ${maxFiles} files.`
                imgUploadLimit.value = '';
            } else {
                msg.textContent = '';
            }
        })
    </script>